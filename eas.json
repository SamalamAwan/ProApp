{
    "cli": {
        "version": ">= 0.54.1"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal"
        },
        "development-iOS": {
            "developmentClient": true,
            "distribution": "internal",
            "ios": {
                "simulator": true
            }
        },
        "preview": {
            "distribution": "internal"
        },
        "production-alpha-no-updates": {
            "android": {
                "buildType": "apk"
            }
        },
        "production-alpha-updates": {
            "android": {
                "buildType": "apk"
            },
            "channel": "preview"
        }
    },
    "submit": {
        "production": {}
    }
}